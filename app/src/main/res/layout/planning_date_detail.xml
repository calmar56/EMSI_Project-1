<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/app_bar"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:gravity="center_horizontal">

       <TextView
           android:id="@+id/title_detail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Title / Description"
           android:layout_margin="10dp"
           android:textSize="25dp"
           android:textColor="@color/colorPrimary"/>

       <TextView
           android:id="@+id/date_detail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/title_detail"
           android:text="Date :   juin 01,2015"
           android:layout_marginLeft="20dp"
           android:textSize="15dp"
           android:textColor="@color/colorPrimary"/>

       <TextView
           android:id="@+id/time_detail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/date_detail"
           android:text="Time :   08:00-09:15"
           android:layout_marginLeft="20dp"
           android:textSize="15dp"
           android:textColor="@color/colorPrimary"/>

       <TextView
           android:id="@+id/room_detail"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/time_detail"
           android:layout_marginTop="10dp"
           android:text="Location  Salon F"
           android:layout_marginLeft="10dp"
           android:textSize="15dp"
           android:textColor="@color/colorPrimary"/>


       <android.support.v7.widget.CardView
           android:layout_below="@id/room_detail"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/cv_planing"
           android:layout_margin="5dp">

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:padding="10dp">

               <TextView
                   android:id="@+id/dateItem"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="08:00 - 9:15"
                   android:textSize="10dp"
                   android:textColor="@color/colorPrimary"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textAppearance="?android:attr/textAppearanceLarge"
                   android:text="Description"
                   android:textColor="@color/colorPrimaryDark"
                   android:textSize="15dp"
                   android:id="@+id/titleItem"
                   android:layout_below="@id/dateItem"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/location"
                   android:layout_below="@+id/titleItem"
                   android:text="Salle"/>


           </RelativeLayout>

       </android.support.v7.widget.CardView>


   </RelativeLayout>

</LinearLayout>